
<div class="group">
  <a href="{{ product.url }}" class="block">
    <div class="relative aspect-[4/5] bg-[#0F172A] rounded-[3rem] p-10 mb-8 overflow-hidden flex items-center justify-center border border-white/5 transition-all duration-700 group-hover:shadow-[0_40px_80px_rgba(0,0,0,0.6)] group-hover:-translate-y-2">
      <img src="{{ product.featured_image | img_url: '600x600' }}" class="max-w-full max-h-full object-contain group-hover:scale-110 transition-transform duration-1000">
      
      <div class="absolute bottom-8 left-8 right-8 translate-y-20 group-hover:translate-y-0 transition-transform duration-500">
        <div class="bg-[#C5A059] text-slate-950 py-4 rounded-2xl text-center text-[9px] font-black uppercase tracking-widest">
          View Detail
        </div>
      </div>
    </div>
    
    <div class="space-y-2 px-4 text-center">
      <span class="text-[#C5A059] text-[9px] font-black uppercase tracking-[0.3em]">{{ product.vendor }}</span>
      <h3 class="text-white font-bold text-lg line-clamp-1 group-hover:text-[#C5A059] transition-colors">{{ product.title }}</h3>
      <p class="text-xl font-black text-white tracking-tighter">{{ product.price | money }}</p>
    </div>
  </a>
</div>
