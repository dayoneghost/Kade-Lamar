
<div class="min-h-screen pt-32 pb-40 px-6">
  <div class="container mx-auto max-w-7xl">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
      <!-- Media Gallery -->
      <div class="space-y-8">
        <div class="aspect-square bg-[#020617] rounded-[3rem] border border-white/5 overflow-hidden flex items-center justify-center p-12 shadow-2xl">
          <img src="{{ product.featured_image | img_url: '1024x1024' }}" alt="{{ product.title }}" class="max-w-full max-h-full object-contain">
        </div>
        <div class="grid grid-cols-4 gap-4">
          {% for image in product.images %}
            <div class="aspect-square bg-white/5 rounded-2xl border border-white/5 p-2 overflow-hidden">
              <img src="{{ image.src | img_url: '200x200' }}" class="w-full h-full object-contain">
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Detail Panel -->
      <div class="space-y-12">
        <header>
          <span class="text-[#C5A059] font-black text-[10px] uppercase tracking-[0.5em] mb-4 block">{{ product.vendor }}</span>
          <h1 class="text-4xl md:text-6xl font-black font-playfair italic tracking-tighter text-white">{{ product.title }}</h1>
          <p class="text-4xl font-black text-[#C5A059] tracking-tighter mt-6">{{ product.price | money }}</p>
        </header>

        <div class="bg-white/5 p-10 rounded-[2.5rem] border border-white/10">
          <form action="/cart/add" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
            <button type="submit" class="w-full bg-[#C5A059] text-slate-950 py-6 rounded-2xl font-black uppercase tracking-[0.4em] text-[10px] hover:bg-white transition-all shadow-2xl">
              Add to Shopping Bag
            </button>
          </form>
          <div class="mt-6 flex items-center justify-center space-x-3 text-green-500">
             <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
             <span class="text-[9px] font-black uppercase tracking-widest">In Stock - Nairobi Dispatch Ready</span>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="p-6 bg-white/5 rounded-3xl border border-white/5">
            <i class="fas fa-truck text-[#C5A059] mb-4"></i>
            <p class="text-[9px] font-black uppercase text-slate-500">Fast Delivery</p>
            <p class="text-xs font-bold">Same Day Nairobi</p>
          </div>
          <div class="p-6 bg-white/5 rounded-3xl border border-white/5">
            <i class="fas fa-shield-alt text-[#C5A059] mb-4"></i>
            <p class="text-[9px] font-black uppercase text-slate-500">Authentic</p>
            <p class="text-xs font-bold">Official Warranty</p>
          </div>
        </div>

        <div class="prose prose-invert max-w-none text-slate-400">
          {{ product.description }}
        </div>
      </div>
    </div>
  </div>
</div>
