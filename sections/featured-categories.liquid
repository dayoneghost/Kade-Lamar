
<section class="py-24 bg-[#0F172A]">
  <div class="container mx-auto px-12">
    <div class="text-center mb-20">
      <span class="text-[#C5A059] text-[10px] font-black uppercase tracking-[0.8em] mb-4 block">Hybrid Horizon</span>
      <h2 class="text-5xl font-black font-playfair italic text-white tracking-tighter">Bespoke <span class="text-slate-500">Categories.</span></h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        <a href="{{ collection.url }}" class="relative h-[400px] rounded-[32px] overflow-hidden group border border-white/5">
          {% if collection.image %}
            <img src="{{ collection.image | img_url: '800x800' }}" class="absolute inset-0 w-full h-full object-cover opacity-40 group-hover:scale-110 transition-transform duration-1000">
          {% else %}
            <div class="absolute inset-0 bg-slate-800 opacity-40"></div>
          {% endif %}
          <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-transparent to-transparent"></div>
          
          <div class="absolute inset-0 p-10 flex flex-col justify-end">
            <h3 class="text-3xl font-black font-playfair italic text-white mb-2">{{ collection.title }}</h3>
            <p class="text-[10px] font-black uppercase tracking-widest text-[#C5A059]">Browse Collection</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Categories",
  "max_blocks": 6,
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        { "type": "collection", "id": "collection", "label": "Select Collection" }
      ]
    }
  ],
  "presets": [{ "name": "Featured Categories" }]
}
{% endschema %}
