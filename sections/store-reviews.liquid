
<section class="py-24 md:py-40 bg-[#020617] border-t border-white/5">
  <div class="container mx-auto px-6 md:px-12">
    <div class="text-center mb-20 md:mb-32">
      <span class="text-[#C5A059] text-[10px] font-black uppercase tracking-[0.8em] mb-6 block">Customer Reviews</span>
      <h2 class="text-5xl md:text-7xl font-black font-playfair italic text-white tracking-tighter leading-none">Verified Buyers.</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      {% for block in section.blocks %}
        <div class="bg-white/5 p-10 md:p-12 rounded-[2.5rem] md:rounded-[3rem] border border-white/5 relative group overflow-hidden reveal-item">
          <i class="fas fa-quote-right absolute top-10 right-10 text-[#C5A059] text-5xl md:text-7xl opacity-10 group-hover:opacity-20 transition-opacity"></i>
          
          <div class="flex space-x-1 mb-8">
            {% for i in (1..5) %}
              <i class="fas fa-star text-[#C5A059] text-xs"></i>
            {% endfor %}
          </div>
          <p class="text-lg md:text-xl text-slate-300 font-medium italic leading-relaxed mb-10 relative z-10">"{{ block.settings.review_text }}"</p>
          
          <div class="flex items-center space-x-4 border-t border-white/5 pt-8">
            <div class="w-12 h-12 bg-[#C5A059] rounded-full flex items-center justify-center font-black text-slate-950">
              {{ block.settings.author | slice: 0 }}
            </div>
            <div>
              <p class="font-bold text-white">{{ block.settings.author }}</p>
              <p class="text-[9px] md:text-[10px] font-black uppercase tracking-widest text-slate-500">{{ block.settings.date }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="mt-16 md:mt-24 flex justify-center">
       <a href="https://share.google/6JOgBWtHDWlcHOIPr" target="_blank" class="flex items-center space-x-4 bg-white/5 px-10 py-5 rounded-full border border-white/5 hover:bg-white/10 transition-all group">
          <span class="text-[10px] font-black uppercase tracking-[0.3em] text-white">View Google Reviews</span>
          <i class="fas fa-external-link-alt text-[#C5A059] group-hover:translate-x-1 transition-transform"></i>
       </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Store Reviews",
  "settings": [],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        { "type": "textarea", "id": "review_text", "label": "Review Text", "default": "Best prices for Hisense in Nairobi!" },
        { "type": "text", "id": "author", "label": "Author", "default": "David M." },
        { "type": "text", "id": "date", "label": "Date", "default": "2 days ago" }
      ]
    }
  ],
  "presets": [{ "name": "Store Reviews" }]
}
{% endschema %}
