
<section class="py-24 md:py-40 bg-[#0F172A] border-t border-white/5 overflow-hidden">
  <div class="container mx-auto px-6 md:px-12">
    <div class="grid lg:grid-cols-2 gap-16 md:gap-24 items-center">
      <div class="space-y-12 reveal-item">
        <span class="text-[#C5A059] text-[10px] font-black uppercase tracking-[0.8em] block">Visit Us</span>
        <h2 class="text-5xl md:text-8xl font-black font-playfair italic text-white tracking-tighter leading-none">Flagship <br/><span class="text-slate-400">Showroom.</span></h2>
        
        <div class="space-y-10">
          <div class="flex items-start space-x-6">
            <div class="w-14 h-14 bg-[#C5A059]/10 rounded-2xl flex items-center justify-center text-[#C5A059] flex-shrink-0">
              <i class="fas fa-map-marker-alt text-2xl"></i>
            </div>
            <div>
              <h4 class="text-xl font-bold text-white mb-2">Smart House, 4th Floor</h4>
              <p class="text-slate-400 font-medium">Kimathi Street, Nairobi CBD. Conveniently located for all your electronic needs.</p>
            </div>
          </div>
          <div class="flex items-center space-x-6">
            <div class="w-14 h-14 bg-[#C5A059]/10 rounded-2xl flex items-center justify-center text-[#C5A059] flex-shrink-0">
              <i class="fas fa-phone-alt text-2xl"></i>
            </div>
            <div>
              <h4 class="text-xl font-bold text-white mb-2">Call to Reserve</h4>
              <p class="text-[#C5A059] font-black text-2xl">+254 742 721 309</p>
            </div>
          </div>
        </div>

        <div class="pt-10 flex flex-col sm:flex-row gap-6">
          <a href="https://maps.app.goo.gl/yY7xYjS9vP8u6A8y7" target="_blank" class="bg-white text-slate-900 px-12 py-5 rounded-full flex items-center justify-center font-black uppercase tracking-[0.3em] text-[10px] hover:bg-[#C5A059] transition-all shadow-2xl">
            Get Directions
          </a>
          <a href="tel:0742721309" class="border border-white/10 px-12 py-5 rounded-full flex items-center justify-center font-black uppercase tracking-[0.3em] text-[10px] text-white hover:bg-white/5 transition-all">
            Call Showroom
          </a>
        </div>
      </div>

      <div class="relative aspect-square bg-slate-950 rounded-[3rem] md:rounded-[4rem] overflow-hidden border border-white/5 shadow-2xl group reveal-item">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m13!1m1!1s0x182f10d616853285:0xbd910609339e38e!2sSmart%20Duka%20Electronics!5e0!3m2!1sen!2ske!4v1700000000000!5m2!1sen!2ske&dark_mode=true" 
          width="100%" 
          height="100%" 
          style="border:0; filter: invert(90%) hue-rotate(180deg) brightness(95%) contrast(90%);" 
          allowfullscreen="" 
          loading="lazy">
        </iframe>
        <div class="absolute inset-0 pointer-events-none border-[20px] md:border-[30px] border-[#0F172A]"></div>
      </div>
    </div>
  </div>
</section>

